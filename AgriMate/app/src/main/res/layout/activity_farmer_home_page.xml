<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:paddingTop="40dp"
            android:layout_weight="0.5"
            android:background="@drawable/main" />

        <Button
            android:id="@+id/profilebtn"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_weight="1.0"
            android:background="@drawable/prof"
            android:gravity="center|bottom"
            android:text="Profile"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"

        android:orientation="horizontal" >

        <Button
            android:id="@+id/buttonreq"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:gravity="center|bottom"
            android:background="@drawable/reqsto"
            android:text="Request Money"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:background="@drawable/mysto"
            android:layout_weight="1.0"
            android:text="My Stocks"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#000000"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:textStyle="bold"
            android:background="@drawable/stohis"
            android:textSize="20dp"
            android:textColor="#000000"
            android:text="Stock History"
            android:gravity="center|bottom"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="20dp"
            android:background="@drawable/upve"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_weight="1.0"
            android:text="Update Verification"
            android:gravity="center|bottom"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/contact"
            android:layout_weight="1.0"
            android:textStyle="bold"
            android:text="Help and support"
            android:textSize="20dp"
            android:textColor="#000000"
            android:gravity="center|bottom"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/helpas"
            android:textColor="#000000"
            android:text="about app"
            android:gravity="center|bottom"/>

    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="#ffffff"/>
</LinearLayout>