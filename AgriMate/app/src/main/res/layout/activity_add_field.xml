<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_editor_absoluteX="8dp"
        app:layout_editor_absoluteY="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="100dp"
            android:orientation="vertical">

           <EditText
               android:layout_width="fill_parent"
               android:layout_height="fill_parent"
               android:background="@drawable/small"
               android:hint="Name"
               android:id="@+id/Name"
               android:textColor="#000000"
               android:textColorHint="#000000"
               android:textStyle="bold"
               android:textAlignment="center"
               android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/Phno"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/small"
                android:textColor="#000000"
                android:hint="Phone Number"
                android:textColorHint="#000000"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:id="@+id/Acn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/small"
                android:hint="Aadhar Card Number"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:id="@+id/Adress"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/large"
                android:textColor="#000000"
                android:hint="Address"
                android:textColorHint="#000000"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:id="@+id/Area"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textColor="#000000"
                android:background="@drawable/small"
                android:hint="Area Available in Acres"
                android:textStyle="bold"
                android:textColorHint="#000000"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:id="@+id/Amount"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/small"
                android:textColor="#000000"
                android:textStyle="bold"
                android:hint="Fund Required in Rs."
                android:textColorHint="#000000"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:id="@+id/Choice"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/small"
                android:textColor="#000000"
                android:textStyle="bold"
                android:hint="What Plant Would you like to grow?"
                android:textColorHint="#000000"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:id="@+id/Des"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/large"
                android:hint="Brief Description"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textColorHint="#000000"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="fill_parent"
                android:id="@+id/btnSave"
                android:text="Finish"
                android:textSize="30dp"
                android:layout_height="fill_parent"
                android:background="@drawable/ath1"
                android:layout_marginTop="10dp"/>





        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>